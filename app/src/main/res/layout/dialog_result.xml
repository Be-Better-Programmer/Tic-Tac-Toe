<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_dialog"
    android:layout_marginStart="48dp"
    android:layout_marginEnd="48dp">

    <ImageView
        android:id="@+id/ic_won_trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/image_padding_top_in_dialog"
        android:src="@drawable/ic_trophy_won"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ic_tie_trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/image_padding_top_in_dialog"
        android:src="@drawable/ic_trophy_tie"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ic_lost_trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/image_padding_top_in_dialog"
        android:src="@drawable/ic_trophy_lost"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="160dp"
        android:textSize="@dimen/result_text_size"
        android:text="Yeppi.. Jone Won!"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/Rematch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@+id/tv_result"
        android:layout_marginTop="48dp"
        android:background="@drawable/layout_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textSize="@dimen/button_text_size"
            android:text="@string/rematch"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/quit_match"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/Rematch"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textSize="@dimen/button_text_size"
        android:text="@string/quit"
        android:textColor="@color/colorPrimary"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>