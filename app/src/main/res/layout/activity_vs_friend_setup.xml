<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".PlayWithFriendActivity"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_settings"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="370dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/righteous"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="50dp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:fontFamily="sans-serif"
                android:text="master piece"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="22dp"/>

            <TextView
                android:id="@+id/p1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subTitle"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="50dp"
                android:text="Player Name"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_circle_white"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/player1"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p1Name"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/White"
                android:ems="10"
                android:hint="Jone"
                android:inputType="textPersonName"
                android:textColor="@color/White"
                android:textColorHint="@color/White" />

            <TextView
                android:id="@+id/p2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Player Name"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_cross_white"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/player2"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p2Name"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/White"
                android:ems="10"
                android:hint="Smith"
                android:inputType="textPersonName"
                android:textColor="@color/White"
                android:textColorHint="@color/White" />

            <TextView
                android:id="@+id/choice"
                android:text="Who will move first?"
                android:layout_width="match_parent"
                android:layout_below="@+id/player2"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/White"/>
            <ImageButton
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/ic_circle_white"/>
            <ImageButton
                android:id="@+id/cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/circle"
                android:background="@drawable/ic_cross_white"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/play"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/gradient_rounded_button"
                android:text="PLAY"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <Button
                android:id="@+id/quit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/play"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_rounded_button1"
                android:text="QUIT"
                android:textAlignment="center"
                android:textColor="#e60000"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>